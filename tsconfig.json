{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "pretty": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./src/public",
        "node_modules"
    ]
}