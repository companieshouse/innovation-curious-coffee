{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "pretty": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "noImplicitAny": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "./src/public"
    ]
}